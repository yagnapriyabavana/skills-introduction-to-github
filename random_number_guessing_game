import random
print("Hiii!!This is a number guessing game!!!")
print("Rules of this name are:")
print("You will be provided 7 chances.\nYou need to guess the right number that is generated by the system.")
num=random.randint(1,100)
cc=7
gc=0
while gc<cc:
    guess=int(input("Enter your guessing number:"))
    gc+=1
    if guess==num:
        print(f"Hurray!!! you won the game.The number is {num} YOu guessed the number in {gc} chances")
        break
    elif guess<num:
        print("Your guess number is smaller.")
    elif guess>num:
        print("your guess number is too great.")
    else:
        print("your chances are over!!Try again.")
    
    
        
    
